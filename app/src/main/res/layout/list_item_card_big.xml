<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/info_doctor"
                >


                <ImageView
                    android:id="@+id/imagem_prod"
                    android:src="@drawable/ic_android_black_48dp"
                    android:layout_width="160dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="160dp" />
                <LinearLayout
                    android:id="@+id/dados"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imagem_prod"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="26dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:text="Batata Reno"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:id="@+id/nomeProduto"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingRight="16dp"
                        android:text="Bla Bla"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/agricultor"
                        android:textSize="11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingRight="16dp"
                        android:text="JosÃ© sabido Busse"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/preco"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="10sp"
                        android:textSize="19sp"
                        android:fontFamily="sans-serif-light"
                        android:text="4500 MTn/Kg"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/data" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="190dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colocar no Cesto"
                        android:textSize="12sp"
                        android:textColor="@color/accent_material_light"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="8dp"
                        android:id="@+id/btColocarNoCesto"/>

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>